<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    tools:context=".SetupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setup_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_scripts"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/setup_icon_desc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup_scripts_title"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup_scripts_desc"
                android:textSize="14sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_scripts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_button_grant" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_configs"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/setup_icon_desc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup_configs_title"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup_configs_desc"
                android:textSize="14sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_configs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_button_grant" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_notify"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/setup_icon_desc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup_notify_title"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setup_notify_desc"
                android:textSize="14sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_button_grant" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setup_tg_info"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_telegram_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setup_tg_link"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:autoLink="web"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/setup_lang_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <RadioGroup
        android:id="@+id/rg_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_lang_system" />

        <RadioButton
            android:id="@+id/rb_russian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_lang_ru" />

        <RadioButton
            android:id="@+id/rb_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_lang_en" />

        <RadioButton
            android:id="@+id/rb_ukrainian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_lang_uk" />

        <RadioButton
            android:id="@+id/rb_belarusian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_lang_be" />

        <RadioButton
            android:id="@+id/rb_chinese_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_lang_zh_s" />

        <RadioButton
            android:id="@+id/rb_chinese_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_lang_zh_t" />
    </RadioGroup>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/button_finish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/setup_button_finish"
        android:enabled="false" />

</LinearLayout>